<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeletingServicePage">

    <TextView
        android:id="@+id/deleteServiceTitle"
        android:layout_width="202dp"
        android:layout_height="39dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="40dp"
        android:text="Deleting Service"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/servicesList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/servicesList"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteServiceTitle" />

    <Button
        android:id="@+id/deletingServiceButt"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginBottom="155dp"
        android:layout_marginEnd="125dp"
        android:layout_marginLeft="124dp"
        android:layout_marginRight="125dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="222dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servicesList"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>